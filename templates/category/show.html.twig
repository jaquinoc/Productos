{% extends 'home.html.twig' %}

{% block title %}Ver categoría{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
          <h3 class="card-title text-bold">VER CATEGORIA</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">ID</div>
                <div class="col-sm-3">{{ category.id }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Nombre de la categoría</div>
                <div class="col-sm-3">{{ category.name }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Estado</div>
                <div class="col-sm-3">{{ (category.active==1) ? 'Activo' : 'Inactivo' }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-12"><hr /></div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <a href="{{ path('listarcategorias') }}" class="btn btn-default">Cancelar</a>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function() {

    });
</script>

{% endblock %}
