{% extends 'home.html.twig' %}

{% block title %}Ver producto{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
          <h3 class="card-title text-bold">VER PRODUCTO</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">ID</div>
                <div class="col-sm-3">{{ product.id }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Código</div>
                <div class="col-sm-3">{{ product.code }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Nombre del producto</div>
                <div class="col-sm-3">{{ product.name }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Marca</div>
                <div class="col-sm-3">{{ product.brand }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Descripción</div>
                <div class="col-sm-3">{{ product.description }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Precio</div>
                <div class="col-sm-3">{{ product.price }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-3 text-bold">Nombre de la categoría</div>
                <div class="col-sm-3">{{ product.getCategory() }}</div>
                <div class="col-sm-3 text-right text-bold"></div>
            </div>
            <div class="row">
                <div class="col-sm-12"><hr /></div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <a href="{{ path('listarproductos') }}" class="btn btn-default">Cancelar</a>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function() {

    });
</script>

{% endblock %}
